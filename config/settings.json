{
  "capture": {
    "fps": 3,
    "quality": 70,
    "max_storage_mb": 10000,
    "screenshot_format": "webp",
    "max_keep_days": 7,
    "monitors": "all",
    "resolution_cap": 1080,
    "monitor": 0,
    "change_threshold": 0.1,
    "capture_mode": "video",
    "video_segment_sec": 60,
    "video_codec": "mp4v"
  },
  "audio": {
    "sample_rate": 16000,
    "channels": 1,
    "segment_seconds": 30,
    "use_vad": true,
    "device": 15
  },
  "stt": {
    "engine": "faster-whisper",
    "model": "base",
    "device": "cpu"
  },
  "ocr": {
    "engine": "tesseract",
    "language": "eng"
  },
  "llm": {
    "engine": "llama_cpp",
    "model": "Phi-3-mini-4k-instruct-q4.gguf",
    "context_size": 2048,
    "temperature": 0.3
  },
  "storage": {
    "database_path": "data/app.db",
    "captures_dir": "data/captures",
    "audio_dir": "data/audio",
    "screens_dir": "data/screens",
    "encrypt_at_rest": false
  },
  "privacy": {
    "exclude_apps": [
      "1Password",
      "KeePass",
      "Bitwarden"
    ]
  },
  "ui": {
    "start_minimized": false,
    "enable_tray": true
  }
}